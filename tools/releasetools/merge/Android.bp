python_binary_host {
    name: "pangu_compatibility_checks",
    defaults: ["releasetools_binary_defaults"],
    srcs: [":releasetools_merge_sources"],
    libs: [
        "releasetools_add_img_to_target_files",
        "releasetools_build_super_image",
